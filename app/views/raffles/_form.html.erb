  <%= form_for(@raffle) do |f| %>
    <div class="row">
      <div class="col-sm-12">
        <%= error_explanation(@raffle) %>
      </div><!-- col -->
    </div><!-- row -->

    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :title, class: 'control-label' %>
          <%= f.text_field :title, class: 'form-control', required: true %>
        </div>
      </div><!-- col -->

      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :ticket_price, class: 'control-label' %>
          <%= f.text_field :ticket_price, class: 'form-control' %>
        </div>
      </div><!-- col -->
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :end_time, class: 'control-label'  %>
          <%= f.datetime_select :end_time, class: 'form-control' %>
        </div>
      </div><!-- col -->
    </div><!-- row -->

    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= f.label :description, class: 'control-label' %>
          <%= f.bootsy_area :description, class: 'form-control' %>
        </div>
      </div><!-- col -->
    </div><!-- row -->

    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div><!-- col -->
    </div><!-- row -->



    <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image %>
    </div>
  <% end %><!-- form -->
