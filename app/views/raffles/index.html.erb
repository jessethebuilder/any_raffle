<p id="notice"><%= notice %></p>

<h1>Listing Raffles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>End time</th>
      <th>Slug</th>
      <th>Ticket price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raffles.each do |raffle| %>
      <tr>
        <td><%= raffle.user_id %></td>
        <td><%= raffle.title %></td>
        <td><%= raffle.description %></td>
        <td><%= raffle.image %></td>
        <td><%= raffle.end_time %></td>
        <td><%= raffle.slug %></td>
        <td><%= raffle.ticket_price %></td>
        <td><%= link_to 'Show', raffle %></td>
        <td><%= link_to 'Edit', edit_raffle_path(raffle) %></td>
        <td><%= link_to 'Destroy', raffle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

